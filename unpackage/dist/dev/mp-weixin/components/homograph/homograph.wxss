.artice {
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap;
}
.artice .artice-item {
  width: calc(50% - 12rpx);
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 0 0 24rpx;
  margin-bottom: 24rpx;
}
.artice .artice-item:nth-child(odd) {
  margin-right: 12rpx;
}
.artice .artice-item:nth-child(even) {
  margin-left: 12rpx;
}
.artice .artice-item .cover {
  width: 100%;
  margin-bottom: 12rpx;
  border-radius: 24rpx 24rpx 0 0;
}
.artice .artice-item .title {
  font-weight: 600;
  font-size: 36rpx;
  margin-bottom: 12rpx;
  padding: 0 24rpx;
}
.artice .artice-item .info {
  padding: 24rpx;
  padding-top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #cacaca;
}
.artice .artice-item .info .left {
  display: flex;
}
.artice .artice-item .info .left .head {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.artice .artice-item .info .left .author {
  font-size: 24rpx;
}
.artice .artice-item .info .right {
  display: flex;
}
.artice .artice-item .info .right .give {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.artice .artice-item .info .right .count {
  font-size: 24rpx;
