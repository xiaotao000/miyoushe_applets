.info-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
}
.info-box .info {
  display: flex;
  align-items: center;
}
.info-box .info .portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.info-box .info .author-box {
  margin-left: 12rpx;
}
.info-box .info .author-box .author {
  font-size: 32rpx;
  color: #111;
  font-weight: 500;
  margin-bottom: 12rpx;
}
.info-box .info .author-box .introduce {
  font-size: 28rpx;
  color: #7d7d7d;
}
.info-box .follow {
  padding: 6rpx 12rpx;
  border: 2rpx solid #00a3ff;
  color: #00a3ff;
  border-radius: 6rpx;
  font-size: 24rpx;
}
.title {
  padding: 0 24rpx;
  font-size: 42rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}
.time {
  text-align: center;
  font-size: 32rpx;
  color: #e4e5e8;
  margin-bottom: 24rpx;
}
.details {
  font-size: 32rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}
.details .cover {
  width: 100%;
}
.browse {
  color: #e4e5e8;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.talk {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.talk text {
  display: inline-block;
  border-radius: 8rpx;
  background-color: #F0F1F5;
  padding: 0 12rpx;
}