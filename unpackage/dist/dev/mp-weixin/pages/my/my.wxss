  width: 180rpx;
}
.no-login .info image {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: -80rpx;
  border: 2rpx solid #efefef;
  border-radius: 50%;
}
.no-login .info .btn {
  padding-top: 120rpx;
  text-align: center;
  font-size: 44rpx;
  margin-bottom: 10rpx;
}
